{% extends 'base.html.twig' %}

{% block title %}Bienvenue sur mon blog !{% endblock %}

{% block stylesheets %}
<style>

div {
    background-color : #CCC;
}
h3 {
    color: darblue;
}
</style>
{% endblock %}

{% block body %}
    {% for article in articles %}
    <a href="{{ path('app_article', {id: article.id}) }}">
    <h1>{{ article.title }}</h1>
    <h3>{{ article.author }}</h3>
    <h3>{{ article.description }}</h3>
    </a>
    {% endfor %}
{% endblock %}
